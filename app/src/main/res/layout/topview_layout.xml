<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/search_bar_red"
                android:paddingVertical="10dp"
>
    <Button android:layout_width="40dp" android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:id="@+id/topview_back_button"
            android:background="@drawable/back_vector"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/top_view_title"
              android:textSize="25sp"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:textColor="@color/white"
              android:visibility="invisible"/>

    <Button android:layout_width="35dp" android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/share_vector"
            android:id="@+id/topview_share_button" />
</RelativeLayout>