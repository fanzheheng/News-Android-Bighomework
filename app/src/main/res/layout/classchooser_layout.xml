<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="600dp"
              android:background="@drawable/class_choose_background"
>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/my_classes"
              android:layout_marginHorizontal="10dp"
              android:layout_marginVertical="10dp"
              android:textSize="20sp"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/added_classes_list"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/added_class_hint"
              android:id="@+id/added_classes_hint"
              android:gravity="center"
              android:textSize="15sp"
              android:layout_marginBottom="17dp"
              android:visibility="gone"
    />
    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="#000000"
          android:layout_marginHorizontal="20dp"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/available_classes"
              android:layout_marginHorizontal="10dp"
              android:layout_marginVertical="10dp"
              android:textSize="20sp"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/available_classes_list"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="17dp"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/available_classes_hint"
              android:id="@+id/available_classes_hint"
              android:gravity="center"
              android:textSize="15sp"
              android:layout_marginBottom="17dp"
              android:visibility="gone"
    />

</LinearLayout>